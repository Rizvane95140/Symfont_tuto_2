{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block monTitre %} Liste des animaux {% endblock %}

{% block body %}

    {% for animal in animaux %}
        <div class="row align-items-center">
            <div class="col-2 text-center">
                <img src="{{ asset('images/' ~ animal.image) }}" alt="image">
            </div>
            <div class="col-auto">
                <h2><a href="{{ path('afficher_animal', {'id' : animal.id }) }}">{{ animal.nom }}</a></h2>
                <div>{{ animal.description }}</div>
                <div><a href="{{ path('afficher_famille', {id: animal.famille.id} ) }}" class="btn btn-primary">{{ animal.famille.libelle }}</a></div>
                <h2>Pr√©sence de l'animal sur les continents :</h2>
                {% for continent in animal.continents %}
                    <a href="{{ path('afficher_continent', {'id': continent.id}) }}" class="btn btn-danger">{{ continent.libelle }}</a>
                {% endfor %}
                <div>
                    {% for dispose in animal.disposes %}
                        <a href="" class="btn btn-info">{{ dispose.personne.nom }}</a>
                    {% endfor %}
                </div>
            </div>

        </div>
    {% endfor %}
{% endblock %}
