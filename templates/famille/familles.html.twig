{% extends 'base.html.twig' %}

{% block title %} Liste Famille {% endblock %}


{% block monTitre %}Page listant les familles : {% endblock %}
{% block body %}

    {% for famille in familles %}
        <h2 class="border-bottom border-primary"><a href="{{ path('afficher_famille', {id: famille.id} ) }}">{{ famille.libelle }}</a></h2>
        <div>{{ famille.description }}</div>
        <div class="row align-items-center">

        {% for animal in famille.animaux %}
            <div class="col-6">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img src="{{ asset('images/' ~ animal.image) }}" alt="image">
                </div>
                <div class="col-auto">
                    <h2><a href="{{ path('afficher_animal', {'id' : animal.id }) }}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                </div>
            </div>
        {% endfor %}
        </div>


    {% endfor %}
{% endblock %}
